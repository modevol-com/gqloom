{
  "name": "gqloom",
  "version": "0.0.0",
  "description": "Create GraphQL schema and resolvers with TypeScript, using Zod, Valibot or Yup!",
  "main": "index.js",
  "scripts": {
    "test": "vitest run --typecheck",
    "coverage": "vitest run --coverage",
    "format": "biome format --write .",
    "lint": "biome lint --write .",
    "fix": "biome check --write .",
    "check": "biome check --write . && pnpm run check:type",
    "check:type": "pnpm -r check:type",
    "build": "pnpm -F './packages/core' run build && pnpm -F './packages/{drizzle,effect,federation,mikro-orm,prisma,valibot,yup,zod,json}' run build",
    "prepare": "husky",
    "compose-up": "docker compose up -d",
    "push": "pnpm -F @gqloom/drizzle -F @gqloom/prisma -F example-prisma push",
    "ci:publish": "pnpm -F @gqloom/* publish"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json}": [
      "biome check --no-errors-on-unmatched --write"
    ],
    "*.{json,toml,graphql,gql,css}": "biome format --no-errors-on-unmatched --write"
  },
  "keywords": [],
  "author": "xcfox",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@graphql-tools/utils": "^10.11.0",
    "@types/node": "^24.3.0",
    "@typescript/native-preview": "7.0.0-dev.20251210.1",
    "@vitest/coverage-v8": "^3.2.4",
    "graphql": "^16.12.0",
    "husky": "^9.0.11",
    "lint-staged": "^16.2.7",
    "tsdown": "^0.18.3",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@10.26.0+sha512.3b3f6c725ebe712506c0ab1ad4133cf86b1f4b687effce62a9b38b4d72e3954242e643190fc51fa1642949c735f403debd44f5cb0edd657abe63a8b6a7e1e402",
  "pnpm": {
    "overrides": {
      "fastify": "^5.6.2",
      "mercurius": "^16.6.0",
      "graphql": "^16.12.0",
      "pg": "^8.13.2",
      "vite": "npm:rolldown-vite@latest"
    },
    "ignoredBuiltDependencies": [
      "@apollo/protobufjs",
      "@prisma/client",
      "@prisma/engines",
      "@tailwindcss/oxide",
      "esbuild",
      "prisma",
      "sqlite3",
      "vue-demi"
    ],
    "onlyBuiltDependencies": [
      "better-sqlite3"
    ]
  }
}
