{
  "name": "@gqloom/federation",
  "version": "0.12.0",
  "description": "Building subGraphs with GQLoom",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "scripts": {
    "build": "tsdown",
    "check:type": "tsgo --noEmit"
  },
  "files": [
    "dist"
  ],
  "peerDependencies": {
    "@apollo/subgraph": ">= 2.0.0",
    "@gqloom/core": ">= 0.10.0",
    "graphql": ">= 16.8.0"
  },
  "devDependencies": {
    "@apollo/server": "^5.2.0",
    "@apollo/subgraph": "^2.12.2",
    "@gqloom/core": "workspace:*",
    "@mercuriusjs/federation": "^5.0.0",
    "fastify": "^5.6.2",
    "graphql-tag": "^2.12.6",
    "graphql-yoga": "^5.18.0",
    "mercurius": "^16.6.0",
    "mercurius-integration-testing": "^9.0.0"
  },
  "keywords": [
    "gqloom",
    "graphql",
    "schema",
    "typescript",
    "apollo",
    "federation",
    "subgraph"
  ],
  "author": "xcfox",
  "license": "MIT",
  "homepage": "https://gqloom.dev/",
  "repository": {
    "type": "git",
    "url": "https://github.com/modevol-com/gqloom.git",
    "directory": "packages/federation"
  },
  "publishConfig": {
    "access": "public"
  }
}
