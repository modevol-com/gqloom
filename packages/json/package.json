{
  "name": "@gqloom/json",
  "version": "0.15.0",
  "description": "Create GraphQL schema and resolvers easily using using JSON Schema!",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "scripts": {
    "build": "tsdown",
    "check:type": "tsgo --noEmit"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "gqloom",
    "graphql",
    "schema",
    "typescript",
    "json-schema",
    "validation",
    "validate"
  ],
  "author": "xcfox",
  "license": "MIT",
  "peerDependencies": {
    "@gqloom/core": ">= 0.15.0",
    "graphql": ">= 16.8.0"
  },
  "devDependencies": {
    "@gqloom/core": "workspace:*",
    "ajv": "^8.17.1",
    "arktype": "^2.1.29",
    "typebox": "^1.0.4"
  },
  "homepage": "https://gqloom.dev/",
  "repository": {
    "type": "git",
    "url": "https://github.com/modevol-com/gqloom.git",
    "directory": "packages/json"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "json-schema-to-ts": "^3.1.1"
  }
}
