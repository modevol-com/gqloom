{
  "name": "@gqloom/zod",
  "version": "0.9.1",
  "description": "Create GraphQL schema and resolvers easily using using Zod!",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./v3": {
      "import": {
        "types": "./dist/v3.d.ts",
        "default": "./dist/v3.js"
      },
      "require": {
        "types": "./dist/v3.d.cts",
        "default": "./dist/v3.cjs"
      }
    }
  },
  "scripts": {
    "build": "tsup",
    "check:type": "tsc --noEmit"
  },
  "keywords": [
    "gqloom",
    "graphql",
    "schema",
    "typescript",
    "zod",
    "validation",
    "validate"
  ],
  "author": "xcfox",
  "license": "MIT",
  "peerDependencies": {
    "@gqloom/core": ">= 0.9.0",
    "graphql": ">= 16.8.0",
    "zod": ">= 3.25.0"
  },
  "files": ["dist"],
  "devDependencies": {
    "@gqloom/core": "workspace:*",
    "zod": "3.25.17"
  },
  "homepage": "https://gqloom.dev/",
  "repository": {
    "type": "git",
    "url": "https://github.com/modevol-com/gqloom.git",
    "directory": "packages/zod"
  },
  "publishConfig": {
    "access": "public"
  }
}
